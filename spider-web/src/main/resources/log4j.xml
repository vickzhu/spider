<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="[%d{yy.MM.dd HH:mm:ss}] %p(spider-web) %C{1}#%M(L%L): %m%n" />
		</layout>
	</appender>

	<appender name="dailyFile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/var/log/www/%p(spider-web)/delt.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="[%d{yy.MM.dd HH:mm:ss}] %p(%p(spider-web)) %C{1}#%M(L%L): %m%n" />
		</layout>
	</appender>

	<!-- Root Logger -->
	<root>
		<priority value="${logger.priority}" />
		<appender-ref ref="${logger.appender}" />
	</root>

</log4j:configuration>