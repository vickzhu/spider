                        <label>截止</label>
						<div data-date="${endDate}" class="input-append date datepicker">
							<input type="text" id="endDate" name="endDate" value="$!{endDate}" data-date-format="yyyy-mm-dd" class="span11" />
							<span class="add-on"><i class="icon-th"></i></span> 
						</div>
