<div id="content">
  <div id="content-header">
    <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> 首页</a> <a href="#">股票</a> <a href="#" class="current">大单成交</a> </div>
	<h1></h1>
  </div>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <div class="widget-box">
          <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
            <h5>套</h5>
			<a class="label label-info" style="line-height:20px;"></a>
          </div>
		  <div class="widget-content nopadding">
			<form id="searchForm" method="get" class="form-horizontal">
				<input type="hidden" id="curPage" name="curPage" value="" />
                <div class="search_option">
					<div>
                        <label>日期：</label>
						<div data-date="${tradeDate}" class="input-append date datepicker">
							<input type="text" id="tradeDate" name="tradeDate" value="$!{tradeDate}" data-date-format="yyyy-mm-dd" class="span11" />
							<span class="add-on"><i class="icon-th"></i></span> 
						</div>
						
					</div>
					<button id="searchFr" type="button" class="btn btn-success">搜索</button>
                </div>
			</form>
          </div>
          <div class="widget-content">
            <table class="table table-bordered table-striped">
              <thead>
                <tr>
				  <th style="width:5%;">序号</th>
                  <th>股票</th>
				  <th>涨跌幅</th>
				  <th>套幅</th>
				  <th>日期</th>
                </tr>
              </thead>
              <tbody>
				#foreach($kl in ${page.records})
                <tr>
				  <td>$!{velocityCount}</td>
				  <td><a href="#springUrl('/stock?symbol=')$!{kl.symbol}" target="_blank">$!{companyTool.getStockName($!{kl.symbol})}</a></td>
				  <td>$!{kl.percent}%</td>
				  <td>$!{kl.diffCloseAvg}%</td>
				  <td>$!{kl.tradeDate}</td>
                </tr>
				#end
              </tbody>
             </table>
			 <div id="page_nav"></div>
			</div>
          </div>
        </div>
    </div>
  </div>
</div>

<script src="#resources('js/pagination.js')"></script>
<script type="text/javascript">
	function gotoPage(pageNo){
		$("#curPage").val(pageNo);
		$("#searchForm").submit();
	}
	$('#page_nav').html(new Pagination($!{page.curPage},$!{page.totalPages}, gotoPage).getHtml());
</script>
<link rel="stylesheet" href="#resources('css/datepicker.css')" />
<script src="#resources('js/bootstrap-datepicker.js')"></script> 
<script type="text/javascript">
	$(function(){
		$('.datepicker').datepicker({format: 'yyyy-mm-dd',
            weekStart: 1,
            autoclose: true,
            todayBtn: 'linked',
            language: 'zh-CN'}).on('changeDate',function(){
				$("#searchForm").submit();
			});
	});
</script>