<link rel="stylesheet" href="#resources('css/datepicker.css')" />
<div id="content">
  <div id="content-header">
    <div id="breadcrumb"> <a href="#springUrl('/')" title="回到首页" class="tip-bottom"><i class="icon-home"></i> 首页</a><a href="javascript:;" class="current">龙虎榜</a> </div>
  </div>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <div class="widget-box">
          <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
            <h5>龙虎榜</h5>
			<a id="ztAdd" class="label label-important" style="line-height:20px;">
			添加数据
			</a>
          </div>
		  <div class="widget-content nopadding">
			<form id="searchForm" action="#springUrl('/zt/')" method="get" class="form-horizontal">
                <div class="search_option">
					<div>
                        <label>日期：</label>
						<div data-date="${tradeDate}" class="input-append date datepicker">
							<input type="text" id="tradeDate" name="tradeDate" value="$!{tradeDate}" data-date-format="yyyy-mm-dd" class="span11" />
							<span class="add-on"><i class="icon-th"></i></span> 
						</div>
					</div>
                    <div>
                        <button type="submit"  class="btn btn-success">搜索</button>
                    </div>
                </div>
			</form>
          </div>
          <div class="widget-content">
            <table class="table table-bordered table-striped">
              <thead>
                <tr>
				  <th style="width:5%;">序号</th>
                  <th>代码</th>
				  <th>股票</th>
				  <th>连板天数</th>				  
				  <th>涨停原因</th>
				  <th>操作</th>
                </tr>
              </thead>
              <tbody>
				#foreach($lb in ${lbList})
                <tr lbId="$!{lb.id}">
				  <td>$!{velocityCount}</td>
                  <td>$!{lb.symbol}</td>
                  <td>$!{lb.stockName}</td>			  
				  <td>
					$!{lb.days}板
					#if("$!{lb.shape}" != "")
						($!{lb.shape})
					#end
				  </td>
				  <td>$!{lb.reason}</td>
				  <td>
					<a class="zt-edit" href="javascript:;">修改</a>&nbsp;
					<a class="zt-del" href="javascript:;" stockName="$!{lb.stockName}">删除</a>
				  </td>
                </tr>
				#end
              </tbody>
             </table>
			</div>
          </div>
        </div>
    </div>
  </div>
</div>
<script src="#resources('js/bootstrap-datepicker.js')"></script> 
<script type="text/javascript">
	$(function(){
		$(".zt-edit").click(function(){
			var id = $(this).parent().parent().attr("lbId");
			window.open("#springUrl('/zt/edit')?id="+id+"&tradeDate=${tradeDate}");
		});
		$(".zt-del").click(function(){
			var id = $(this).parent().parent().attr("lbId");
			var r = confirm("确定删除"+$(this).attr("stockName"));
			if(r==true){
				jQuery.post("#springUrl('/zt/del')?id="+id,{},function(result){
					if(result.success){
    					alert("删除成功");
						location.reload();
    				}else {
    					alert("删除失败");
    				}
				});
			}
		});
		$("#ztAdd").click(function(){
			window.open("#springUrl('/zt/add')?tradeDate=${tradeDate}");
		});
		$('.datepicker').datepicker({format: 'yyyy-mm-dd',
            weekStart: 1,
            autoclose: true,
            todayBtn: 'linked',
            language: 'zh-CN'}).on('changeDate',function(){
				$("#searchForm").submit();
			});
	});
</script>
